<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/change_information_toolbar"
        layout="@layout/toolbar_add_warranty"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/textView_changeI_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/wrn_textView_changeI_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*Mật khẩu không đúng"
            android:visibility="gone"
            android:textColor="#F44336"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />
        <EditText
            android:id="@+id/textView_changeI_2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/wrn_textView_changeI_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*Mật khẩu không trùng nhau"
            android:visibility="gone"
            android:textColor="#F44336"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />
        <EditText
            android:id="@+id/textView_changeI_3"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/wrn_textView_changeI_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="*Mật khẩu không trùng nhau"
            android:visibility="gone"
            android:textColor="#F44336"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp" />


    </LinearLayout>

</LinearLayout>