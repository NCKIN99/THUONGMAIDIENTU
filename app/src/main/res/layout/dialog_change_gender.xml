<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="50dp">
    <RadioGroup
        android:id="@+id/rdgroup_changeGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rdbtn_changeGender1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rdbtn_changeGender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/rdbtn_changeGender3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Khác"
            android:layout_marginEnd="5dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_LuuChangeGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:text="Lưu"/>
        <Button
            android:id="@+id/button_HuyChangeGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="hủy"/>
    </LinearLayout>

</LinearLayout>