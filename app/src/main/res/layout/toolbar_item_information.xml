<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ECEAEA">
    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/item_Information_Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/item_Information_Exit"
            android:text="Trở lại"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />


        <FrameLayout
            android:id="@+id/frameLayout_Shopping_Cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/img_ShoppingCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping_cart"/>
            <TextView
                android:id="@+id/number_Shopping_Cart"
                android:visibility="gone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/circle_textview"
                android:textColor="@color/white"
                android:text="0"
                android:layout_gravity="top|end"
                android:textAlignment="center"
                android:gravity="center"/>

        </FrameLayout>

    </RelativeLayout>



</RelativeLayout>